
    <%= form_for :todo, url: create_path, :html => { :id => "todo"} do |form| %>
      <p>
       <div id="label">
        <%= form.label ("text"), "Новая задача", class:'label' %><br>
       </div>
        <%= form.text_field ("text"), placeholder: "Название задачи"%>
      </p>
       <p>

           <%= select_tag 'todo[project_id]', options_for_select(Project.all.collect{ |u| [u.title, u.id] })%>
       </p>
       <div id="buttons">
        <button type="button" id="cancelButton" onclick="document.getElementById('cn').style.display = 'none'">ОТМЕНА</button>
        <button type="button" blue" onclick="document.getElementById('todo').submit()" >OK</button>
       </div>
    <% end %>
